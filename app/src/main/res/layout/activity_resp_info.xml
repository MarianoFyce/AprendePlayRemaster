<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gut"
    tools:context=".abel.Resp_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/informacion">
        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/transparente"
            >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_marginBottom="10dp"
                android:layout_margin="5dp"
                >
                <TextView
                    android:id="@+id/TxtPregunta"
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_margin="10dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/md_white_1000"
                    android:textSize="25sp">

                </TextView>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imgdudas"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:onClick="pasa_chat"
            app:srcCompat="@drawable/dudas" />


    </LinearLayout>



</RelativeLayout>